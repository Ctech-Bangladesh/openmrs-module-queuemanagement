    <changeSet id="queuemanagement-2020-v7" author="nidhro">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="queue_v7"/>
            </not>
        </preConditions>
        <comment>
            Creating the queue_v7 table
        </comment>
        <sql>
            CREATE TABLE IF NOT EXISTS queue_v7 (
            queueid INT NOT NULL AUTO_INCREMENT ,
            token VARCHAR(50) NOT NULL,
            identifier VARCHAR(50) NOT NULL ,
            visitroom VARCHAR(50) NOT NULL ,
            room_id VARCHAR(50) NULL,
            date_created DATE NOT NULL,
            status TINYINT NULL,
            PRIMARY KEY (queueid))
        </sql>
    </changeSet>

