<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet id="queuemanagement-2020-5" author="nidhro">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="queue_v1"/>
            </not>
        </preConditions>
        <comment>
            Creating the queue_v1 table
        </comment>
        <createTable tableName="queue_v1">
            <column name="queueid" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="token" type="int"/>
            <column name="identifier" type="varchar(255)"/>
            <column name="visitroom" type="varchar(255)"/>
            <column name="status" type="boolean"/>
        </createTable>
    </changeSet>

</databaseChangeLog>